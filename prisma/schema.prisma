generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Image {
  id          String    @id @default(uuid())
  ownerId     String
  sha256      String    @unique
  phash       String?
  mime        String
  ext         String
  width       Int
  height      Int
  bytes       Int
  storageKey  String    @unique
  visibility  String
  createdAt   DateTime  @default(now())
}